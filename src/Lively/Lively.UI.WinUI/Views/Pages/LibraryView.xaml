        <GridView
            x:Name="GridControl"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            ItemsSource="{Binding LibraryItems}"
            SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
            <!--
            <MenuFlyout x:Name="contextMenu">
