<Page
    x:Class="Lively.UI.WinUI.Views.Pages.LibraryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Lively.UI.WinUI.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <AcrylicBrush
            x:Key="CustomAcrylicBrush"
            TintColor="{ThemeResource SystemAltMediumColor}"
            TintOpacity="0.05" />

        <DataTemplate x:Name="Normal">
            <Grid
                Width="272"
                Height="153"
                AutomationProperties.Name="{Binding Title}">
                <Image Source="{Binding ImagePath}" Stretch="UniformToFill" />
                <!--
                <Viewbox MaxHeight="10" MaxWidth="10" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5, 5, 5, 5">
                    <SymbolIcon Symbol="Document"/>
                </Viewbox>
                -->
                <ProgressRing
                    Width="25"
                    Height="25"
                    Margin="5,5,5,5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    IsActive="{Binding ItemStartup}" />
                <StackPanel
                    Height="60"
                    Padding="7"
                    VerticalAlignment="Bottom"
                    Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                    Orientation="Vertical">
                    <TextBlock MaxLines="1" Text="{Binding Title}" />
                    <TextBlock
                        Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"
                        MaxLines="2"
                        Style="{ThemeResource CaptionTextBlockStyle}"
                        Text="{Binding Desc}" />
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid Margin="10">
        <GridView
            x:Name="GridControl"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            ItemTemplate="{StaticResource Normal}"
            ItemsSource="{Binding LibraryItems}"
            SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
            <!--
            <MenuFlyout x:Name="contextMenu">
                <MenuFlyout.Items>
                    <MenuFlyoutItem
                        x:Name="moreInformation"
                        Click="contextMenu_Click"
                        Text="Menu1" />
                    <MenuFlyoutItem
                        x:Name="setWallpaper"
                        Click="contextMenu_Click"
                        Text="Menu2" />
                </MenuFlyout.Items>
            </MenuFlyout>
            -->
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid Name="GridWrap" Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>
    </Grid>
</Page>
