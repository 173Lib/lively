<Page
    x:Class="Lively.UI.WinUI.Views.Pages.GalleryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Lively.UI.WinUI.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <AcrylicBrush
            x:Key="DragAcrylicBrush"
            FallbackColor="{ThemeResource SystemAltMediumColor}"
            TintColor="{ThemeResource SystemAltMediumColor}"
            TintOpacity="1.0" />
    </Page.Resources>

    <Grid>
        <GridView
            Grid.Row="1"
            Margin="10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            IsEnabled="False"
            ItemsSource="{Binding LibraryItems}">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Grid
                        Width="272"
                        Height="153"
                        AutomationProperties.Name="{Binding Title}">
                        <Image Source="{Binding ThumbnailPath}" Stretch="UniformToFill" />
                        <StackPanel
                            Height="60"
                            Padding="7"
                            VerticalAlignment="Bottom"
                            Background="{ThemeResource SystemAltMediumColor}"
                            Opacity="0.97"
                            Orientation="Vertical">
                            <TextBlock
                                Margin="0,0,30,0"
                                MaxLines="1"
                                Style="{ThemeResource BodyTextBlockStyle}"
                                Text="{Binding Title}" />
                            <TextBlock
                                Margin="0,0,30,0"
                                Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"
                                MaxLines="2"
                                Style="{ThemeResource CaptionTextBlockStyle}"
                                Text="{Binding Desc}" />
                        </StackPanel>
                        <Button
                            Height="60"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Background="Transparent"
                            BorderBrush="Transparent">
                            <FontIcon Glyph="&#xE896;" />
                        </Button>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid Name="GridWrap" Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>

        <RelativePanel Background="{ThemeResource AcrylicInAppCustomGridBrush}">
            <TextBlock
                x:Uid="ComingSoon"
                Margin="0,12,0,0"
                FontSize="24"
                Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"
                RelativePanel.AlignHorizontalCenterWithPanel="True" />
        </RelativePanel>
    </Grid>
</Page>
