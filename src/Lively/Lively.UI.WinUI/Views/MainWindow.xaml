                MaxHeight="32"
                Margin="100,5,100,5"
                HorizontalAlignment="Center"
                PlaceholderText="Search"
                QueryIcon="Find" />
        </Grid>
        -->

        <NavigationView
            Name="navView"
            IsBackButtonVisible="Collapsed"
            IsSettingsVisible="True"
            PaneDisplayMode="Top">
            <NavigationView.MenuItems>
                <NavigationViewItem
                    Content="Library"
                    Icon="ViewAll"
                    Tag="library" />
                <NavigationViewItem
                    Content="Gallery"
                    Icon="Shop"
                    Tag="gallery" />
            </NavigationView.MenuItems>
            <NavigationView.FooterMenuItems>
                <NavigationViewItem Icon="Help" Tag="help" />
            </NavigationView.FooterMenuItems>
            <NavigationView.PaneFooter>
                <CommandBar DefaultLabelPosition="Right">

                    <AppBarButton Click="AddWallpaperButton_Click" Label="Add Wallpaper">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE710;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarSeparator />

                    <AppBarButton
                        x:Name="controlPanelLabel"
                        Click="ControlPanelButton_Click"
                        Label="0 active wallpaper(s)">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE7F4;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarSeparator />

                    <AppBarButton>
                        <AppBarButton.Flyout>
                            <Flyout>
                                <Slider MinWidth="100" Value="40" />
                            </Flyout>
                        </AppBarButton.Flyout>
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE767;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar>
            </NavigationView.PaneFooter>
            <Frame x:Name="contentFrame" />
        </NavigationView>
    </Grid>
</Window>
