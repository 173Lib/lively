<Window
    x:Class="Lively.UI.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Lively.UI.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <!--
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="250" />
        </Grid.ColumnDefinitions>
        -->

        <!--
        <Grid
            x:Name="TitleBar"
            Grid.Row="0"
            Background="Transparent">
            <TextBlock
                Margin="15"
                HorizontalAlignment="Left"
                FontSize="12"
                Text="Lively Wallpaper" />
            <AutoSuggestBox
                Width="350"
                MaxWidth="400"
                MaxHeight="32"
                Margin="100,5,100,5"
                HorizontalAlignment="Center"
                PlaceholderText="Search"
                QueryIcon="Find" />
        </Grid>
        -->

        <NavigationView
            Name="navView"
            Grid.Row="1"
            BackRequested="NavView_BackRequested"
            IsBackButtonVisible="Collapsed"
            IsBackEnabled="True"
            IsSettingsVisible="True"
            ItemInvoked="NavView_ItemInvoked"
            PaneDisplayMode="Top">
            <!--  main  -->
            <NavigationView.MenuItems>
                <!--
                <NavigationViewItem
                    Content="Library"
                    Icon="ViewAll"
                    Tag="library" />
                <NavigationViewItem
                    Content="Gallery"
                    Icon="Shop"
                    Tag="gallery" />
                -->
            </NavigationView.MenuItems>
            <NavigationView.FooterMenuItems>
                <!--
                <NavigationViewItem Icon="Help" Tag="help" />
                -->
            </NavigationView.FooterMenuItems>
            <!--  footer  -->
            <NavigationView.PaneFooter>
                <CommandBar Name="navCommandBar" DefaultLabelPosition="Right">
                    <AppBarButton Click="AddWallpaperButton_Click" Label="Add Wallpaper">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE710;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarSeparator />
                    <AppBarButton
                        x:Name="controlPanelLabel"
                        Click="ControlPanelButton_Click"
                        Label="0 active wallpaper(s)">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE7F4;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarSeparator />
                    <AppBarButton>
                        <AppBarButton.Flyout>
                            <Flyout>
                                <Slider
                                    Name="audioSlider"
                                    MinWidth="100"
                                    ValueChanged="SliderAudio_ValueChanged" />
                            </Flyout>
                        </AppBarButton.Flyout>
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE767;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <CommandBar.SecondaryCommands>
                        <AppBarButton Click="AppBarHelpButton_Click" Label="Help">
                            <AppBarButton.Icon>
                                <FontIcon Glyph="&#xE897;" />
                            </AppBarButton.Icon>
                        </AppBarButton>
                        <AppBarButton Click="AppBarAboutButton_Click" Label="About">
                            <AppBarButton.Icon>
                                <FontIcon Glyph="&#xE90A;" />
                            </AppBarButton.Icon>
                        </AppBarButton>
                    </CommandBar.SecondaryCommands>
                </CommandBar>
            </NavigationView.PaneFooter>
            <!--  content  -->
            <Frame x:Name="contentFrame" />
        </NavigationView>
    </Grid>
</Window>
