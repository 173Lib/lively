<Page x:Class="livelywpf.Views.SetupWizard.PagePleaseWait"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:livelywpf.Views.SetupWizard"
      xmlns:p = "clr-namespace:livelywpf.Properties"   
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PagePleaseWait">

    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
            <ui:ProgressRing HorizontalAlignment="Left" IsActive="True" Margin="10" Width="50" Height="50"/>
            <TextBlock Text="{x:Static p:Resources.TitlePleaseWait}" FontSize="20"/>
        </StackPanel>
    </Grid>
</Page>
